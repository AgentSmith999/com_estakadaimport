<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="5.0" method="upgrade">
    <name>Estakada Import</name>
    <namespace path="src">Joomla\Component\Estakadaimport</namespace>
    <version>1.0.1</version>
    <description>Импорт товаров в VirtueMart</description>

    <!-- Файлы фронтенда -->
    <files folder="site">
        <folder>assets</folder>
        <folder>src</folder>
        <folder>tmpl</folder>
        <filename>estakadaimport.php</filename>
    </files>

    <!-- Административная часть -->
    <administration>
        <menu img="components/com_estakadaimport/assets/images/icon.png">Estakada Import</menu>
        <submenu>
            <menu link="index.php?option=com_estakadaimport&amp;view=import" img="icon-upload">Импорт товаров</menu>
            <menu link="index.php?option=com_estakadaimport&amp;view=export" img="icon-download">Эспорт товаров</menu>
        </submenu>
        
        <files folder="admin">
            <folder>helpers</folder>
            <folder>services</folder>
            <filename>config.xml</filename>
            <filename>access.xml</filename>
        </files>
    </administration>
</extension>